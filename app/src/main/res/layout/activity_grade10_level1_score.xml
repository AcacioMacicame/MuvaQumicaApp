<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".grade10.Grade10Level1ScoreActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parabens, conseguiu boa pontucao"
            android:textColor="@color/colorPrimary"
            android:padding="4dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/goodScore"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textStyle="normal|bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opss, nao conseguiu boa pontucao"
            android:textColor="@color/colorPrimary"
            android:padding="4dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/badScore"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textStyle="normal|bold"
            android:visibility="gone"/>

        <TextView
            android:text="Your score:"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textScore"
            android:background="@android:color/holo_orange_light"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:text="Highest score:"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorAccent"
            android:id="@+id/textHighScore"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:onClick="onRepeatClick"
            android:padding="8dp"
            android:text="Jogar de Novo"
            android:textColor="#fff"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:onClick="onNextClick"
            android:padding="8dp"
            android:text="Proximo nivel"
            android:textColor="#fff"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>